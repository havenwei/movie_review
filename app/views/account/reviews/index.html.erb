<div class="col-md-12">

  <h2 class="text-center"> 我发表过的影评 </h2>

  <table class="table">
    <thead>
      <tr>
        <th>Movie Name</th>
        <th>Content</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.movie.title %></td>
          <td><%= review.content %></td>
          <td><%= time_ago_in_words(review.updated_at) %> ago</td>
          <td><%= link_to('Edit', edit_movie_review_path(review.movie, review), class: "btn btn-default btn-xs") %></td>
          <td><%= link_to('Delete', account_review_path(review), method: :delete, data:{confirm: "Are you sure"}, class: "btn btn-default btn-xs") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
